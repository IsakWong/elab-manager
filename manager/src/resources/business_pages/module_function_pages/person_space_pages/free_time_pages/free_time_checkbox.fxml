<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXCheckBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="8.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
          <Label fx:id="dayLabel" alignment="CENTER" contentDisplay="CENTER" text="周%S">
              <font>
                  <Font size="18.0" />
              </font>
      </Label>
      <Separator />
      <JFXCheckBox fx:id="checkbox1" checkedColor="#303f9f" prefHeight="20.0" prefWidth="57.0" text="早上" unCheckedColor="BLACK">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </JFXCheckBox>
      <JFXCheckBox fx:id="checkbox2" checkedColor="#303f9f" prefHeight="20.0" prefWidth="57.0" text="下午" unCheckedColor="BLACK">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </JFXCheckBox>
      <JFXCheckBox fx:id="checkbox3" checkedColor="#303f9f" prefHeight="20.0" prefWidth="57.0" text="晚上" unCheckedColor="BLACK">
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </JFXCheckBox>
   </children>
   <padding>
      <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
   </padding>
</VBox>
